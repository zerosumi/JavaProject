<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="chatsys.entity">
	<class name="User" table="USER">
		<id name="id" column="ID">
			<generator class="native" />
		</id>
		<property name="name" not-null="true" column="NAME"></property>
		<property name="sex" column="SEX"></property>
		<property name="icon" column="ICON"></property>
		<property name="memo" column="MEMO"></property>
		<property name="pwd" not-null="true" column="PWD"></property>
	</class>
</hibernate-mapping>